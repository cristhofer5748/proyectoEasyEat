


<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card">
                 <div class="card-header" style="background-color: white;">
                    <h3 >Registro Maquinas</h3>
                </div>
                <div class="card-body">
                    <form action="/registromaquinas" method="POST">
                        <div class="form-group">
                            <input type="text" class="form-control" name="lugar" placeholder="Ingrese el lugar" autofocus>
                        </div>
                        <div class="form-group">
                            <input id="longitud" type="number" step="any" class="form-control" name="longitud" placeholder="Longitud">
                        </div>
                        <div class="form-group">
                            <input id="latitud" type="number" step="any" class="form-control" name="latitud" placeholder="Latitud">
                        </div>
                         <div class="form-group">
                            <input  type="date" step="any" class="form-control" name="fecharevision" placeholder="Elija Fecha">
                        </div>
                        <div class="form-group">
                            <button  class="btn btn-primary btn-block botonguardar">Guardar</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<table class="table table-dark">
  <thead>
    <tr>
      <th scope="col">Id</th>
      <th scope="col">Lugar</th>
      <th scope="col">longitud</th>
      <th scope="col">Latitud</th>
      <th scope="col">Fecha Rev</th>
      <th scope="col">Accion</th>
    </tr>
  </thead>
  <tbody>
   {{#each maquinas}}
    <tr>
      <th scope="row">{{id}}</th>
      <td>{{lugar}}</td>
      <td>{{longitud}}</td>
      <td>{{latitud}}</td>
      <td>{{fecharevision}}</td>
      <td>
          <a href="/eliminarmaquinas/{{id}}"><button  class="btn btn-danger btn-block ">Borrar</button></a>
      </td>
    </tr>                 
    {{/each}}
  </tbody>
</table>
<script src="/js/formulariosmaquina.js"></script>