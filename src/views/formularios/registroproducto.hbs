<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card">
                <div class="card-header" style="background-color: white;">
                    <h3 >Registro Productos</h3>
                </div>
                <div class="card-body">
                     
                    <form action="/registroproductos" method="POST">
                        <div class="form-group">
                            <input type="text" class="form-control" name="nombre" placeholder="Ingrese el nombre Nombre" autofocus>
                        </div>
                        <div class="form-group">
                            <input type="number" class="form-control" name="preciocompra" placeholder="Ingrese el precio compra">
                        </div>
                        <div class="form-group">
                            <input type="number" class="form-control" name="precioventa" placeholder="Ingrese el precio venta">
                        </div>
                        <div class="form-group">
                            <input type="number" class="form-control" name="cantidadtotal" placeholder="Ingrese la cantidad comprada">
                        </div>
                        <div class="form-group">
                            <button  class="btn btn-primary btn-block botonguardar">Guardar</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
